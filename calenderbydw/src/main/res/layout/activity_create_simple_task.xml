<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CreateSimpleTaskActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        app:boxedEdges="top"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Date : 2022.02.03"
                android:textSize="12sp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"

                />
            <Button
                android:id="@+id/btnDatePicker"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/change_date_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tvDate"
                app:layout_constraintTop_toTopOf="@+id/tvDate"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDate"
                android:text="Time : 02:44"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                />
            <Button
                android:id="@+id/btnTimePicker"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/change_date_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tvTime"
                app:layout_constraintTop_toTopOf="@+id/tvTime"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/tvRepeatLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반복"
                app:layout_constraintTop_toBottomOf="@+id/tvTime"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:textSize="12sp"
                />
            <RadioGroup
                android:id="@+id/repeatRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvRepeatLine"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rdoDay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/repeat_on_off"
                    android:text="없음"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/rdoYear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/repeat_on_off"
                    android:text="매년"
                    android:gravity="center"
                    android:textSize="12sp"
                    />
                <RadioButton
                    android:id="@+id/rdoMonth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/repeat_on_off"
                    android:text="매달"
                    android:gravity="center"
                    android:textSize="12sp"
                    />
                <RadioButton
                    android:id="@+id/rdoWeek"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/repeat_on_off"
                    android:text="매주"
                    android:gravity="center"
                    android:textSize="12sp"
                    />
            </RadioGroup>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/weekRepeatBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/repeatRadio"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/checkMon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/checkTue"
                    app:layout_constraintHorizontal_weight="1"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:button="@null"
                    android:text="Mon"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkTue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkMon"
                    app:layout_constraintRight_toLeftOf="@+id/checkWen"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Tue"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkWen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkTue"
                    app:layout_constraintRight_toLeftOf="@+id/checkThu"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Wen"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkThu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkWen"
                    app:layout_constraintRight_toLeftOf="@+id/checkFri"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Thu"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkFri"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkThu"
                    app:layout_constraintRight_toLeftOf="@+id/checkSat"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Fri"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkSat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkFri"
                    app:layout_constraintRight_toLeftOf="@+id/checkSun"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Sat"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    />
                <CheckBox
                    android:id="@+id/checkSun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="@+id/checkSat"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    android:button="@null"
                    android:text="Sun"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/edtTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/cardview_light_background"
            android:textColor="#000000"
            android:maxLines="1"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:inputType="text"
            android:imeOptions="actionSend"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cancel_task"
                />
            <Button
                android:id="@+id/btnTaskCreate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/check_ok"
                />
        </LinearLayout>
    </FrameLayout>



</androidx.wear.widget.BoxInsetLayout>