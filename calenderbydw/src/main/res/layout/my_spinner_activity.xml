<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/strok_line"
            android:layout_gravity="center_vertical"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <androidx.wear.widget.WearableRecyclerView
                    android:id="@+id/RCYear"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="zzzz"
                    android:gravity="center"
                    />
                <androidx.wear.widget.WearableRecyclerView
                    android:id="@+id/RCMonth"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="asfsfsa"
                    android:gravity="center"
                    />

                <androidx.wear.widget.WearableRecyclerView
                    android:id="@+id/RCDay"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="asfsafsaaf"
                    android:gravity="center"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/tvSelectDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2022.03.22"
            android:gravity="center"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/btnCompelete"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="30dp"
            />
    </FrameLayout>

</androidx.wear.widget.BoxInsetLayout>