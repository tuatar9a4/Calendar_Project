<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.task.tasklist.TaskListFragment">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/taskListToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="TaskList"
        app:titleTextColor="@color/black"
        app:titleTextAppearance="@style/Font32Weight600"
        app:menu="@menu/task_toolbar_menu"
        android:paddingEnd="20dp"
        >
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcScheduledDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/taskListToolbar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/task_list_top_date_item"
        tools:itemCount="4"
        />
    <LinearLayout
        android:id="@+id/llCalendarBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rcScheduledDate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/preDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#7b9acc"
            android:gravity="center"
            style="@style/Font24Weight600"
            android:textFontWeight="400"
            android:text="2021.01.01"
            />
        <Button
            android:id="@+id/nextDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcSelectTaskList"
        android:layout_width="match_parent"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/llCalendarBox"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="20dp"
        android:scrollbars="none"
        />
</androidx.constraintlayout.widget.ConstraintLayout>