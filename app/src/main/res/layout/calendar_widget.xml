<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.CalenderByDW.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/widget_background_radius"
    android:padding="@dimen/widget_margin"
    android:theme="@style/Theme.CalenderByDW.AppWidgetContainer">

    <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnPreMonth"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/tvTopDate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/btnPreMonth"
            android:gravity="center"
            android:text="calendar"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnNextMonth"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/tvTopDate"
            android:rotation="180"
            android:src="@drawable/icon_left_arrow" />

        <ImageView
            android:id="@+id/ivMoveToToday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/btnNextMonth"
            android:layout_alignBottom="@+id/btnNextMonth"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/ivSearchDate"
            android:src="@drawable/icon_calendar_check" />


        <ImageView
            android:id="@+id/ivSearchDate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/btnNextMonth"
            android:layout_alignBottom="@+id/btnNextMonth"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_calendar_refresh" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topWeekContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topContainer"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTopSun"
            style="@style/Font20Weight300"
            android:fontFamily="@font/inchen_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUN"
            android:textColor="@color/sunDayColor" />

        <TextView
            android:id="@+id/tvTopMon"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mon"
            android:textColor="@color/commonDayColor" />

        <TextView
            android:id="@+id/tvTopTue"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue"
            android:textColor="@color/commonDayColor" />

        <TextView
            android:id="@+id/tvTopWen"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wen"
            android:textColor="@color/commonDayColor" />

        <TextView
            android:id="@+id/tvTopThu"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thu"
            android:textColor="@color/commonDayColor" />

        <TextView
            android:id="@+id/tvTopFri"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fri"
            android:textColor="@color/commonDayColor" />

        <TextView
            android:id="@+id/tvTopSat"
            style="@style/Font20Weight300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sat"
            android:textColor="@color/satDayColor" />
    </LinearLayout>

    <GridView
        android:id="@+id/gvCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topWeekContainer"
        android:numColumns="7"
        tools:listitem="@layout/widget_calender_grid_item" />

</RelativeLayout>