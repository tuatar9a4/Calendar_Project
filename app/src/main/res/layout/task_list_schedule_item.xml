<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clScheduleContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:elevation="5dp"
    android:layout_marginBottom="15dp"
    android:clipToOutline="true"
    android:background="@drawable/calendar_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/repeatColor"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yearTopColor"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRepeatType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        style="@style/Font24Weight300"
        android:text="타이틀하기!"
        />

    <TextView
        android:id="@+id/tvContentsHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        style="@style/Font16Weight300"
        android:textColor="@color/grayDayColor"
        android:layout_marginTop="10dp"
        android:text="상세"
        />

    <TextView
        android:id="@+id/tvContents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvContentsHolder"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        style="@style/Font20Weight300"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:text="상세내용"
        />

    <TextView
        android:id="@+id/tvRepeatType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반복 : 매일"
        style="@style/Font14Weight300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/tvDeleteSchedule"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_minus"
        />
    <ImageView
        android:id="@+id/tvModifySchedule"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDeleteSchedule"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/icon_pen"
        />
</androidx.constraintlayout.widget.ConstraintLayout>