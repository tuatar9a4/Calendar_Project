<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_peach"
    tools:context=".ui.calendar.CalendarFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/calendarToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/palette_light_green"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCurrentMonth"
            style="@style/Font32Weight600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2201212"
            android:textColor="@color/palette_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarToolbar" />
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/tvSunDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/palette_light_green2"
        android:background="@drawable/select_ractangle"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="SUN"
        android:textColor="@color/yearTopColor"
        app:layout_constraintEnd_toStartOf="@id/tvMonDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarToolbar" />

    <TextView
        android:id="@+id/tvMonDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/palette_light_green2"
        android:background="@drawable/select_ractangle"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="MON"
        android:textColor="@color/commonDayColor"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toStartOf="@id/tvTueDay"
        app:layout_constraintStart_toEndOf="@id/tvSunDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <TextView
        android:id="@+id/tvTueDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/palette_light_green2"
        android:textColor="@color/commonDayColor"
        android:background="@drawable/select_ractangle"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="TUE"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toStartOf="@id/tvWenDay"
        app:layout_constraintStart_toEndOf="@id/tvMonDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <TextView
        android:id="@+id/tvWenDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_ractangle"
        android:backgroundTint="@color/palette_light_green2"
        android:textColor="@color/commonDayColor"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="WEN"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toStartOf="@id/tvThuDay"
        app:layout_constraintStart_toEndOf="@id/tvTueDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <TextView
        android:id="@+id/tvThuDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_ractangle"
        android:backgroundTint="@color/palette_light_green2"
        android:textColor="@color/commonDayColor"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="THU"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toStartOf="@id/tvFriDay"
        app:layout_constraintStart_toEndOf="@id/tvWenDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <TextView
        android:id="@+id/tvFriDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/select_ractangle"
        android:backgroundTint="@color/palette_light_green2"
        android:textColor="@color/commonDayColor"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="FRI"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toStartOf="@id/tvSatDay"
        app:layout_constraintStart_toEndOf="@id/tvThuDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <TextView
        android:id="@+id/tvSatDay"
        style="@style/Font16Weight300"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/select_ractangle"
        android:backgroundTint="@color/palette_light_green2"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="SAT"
        android:textColor="@color/satDayColor"
        app:layout_constraintBottom_toBottomOf="@id/tvSunDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvFriDay"
        app:layout_constraintTop_toTopOf="@id/tvSunDay" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/ivWeekBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvSunDay,tvMonDay,tvTueDay,tvWenDay,tvThuDay,tvFriDay,tvSatDay" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcCustomCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rlTaskContainer"
        app:layout_constraintTop_toBottomOf="@id/ivWeekBarrier"
        app:layout_constraintVertical_weight="1" />

    <RelativeLayout
        android:id="@+id/rlTaskContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcCustomCalendar">

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="2021.10.22"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="asdas" />

        <View
            android:id="@+id/taskLine"
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:layout_alignTop="@+id/tvTaskTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvViewAll"
            android:layout_toRightOf="@+id/tvTaskTitle"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvViewAll"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/tvTaskTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcTaskList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvViewAll"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:overScrollMode="never" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>