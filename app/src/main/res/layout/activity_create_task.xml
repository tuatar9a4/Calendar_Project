<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateTaskActivity">

    <TextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="일정 생성"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvTaskDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
        app:layout_constraintLeft_toLeftOf="@id/tvTaskTimeTitle"
        app:layout_constraintRight_toRightOf="@id/tvTaskTimeTitle"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Date : "
        />
    <TextView
        android:id="@+id/tvTaskDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvTaskDateTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvTaskDateTitle"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="날짜"
        />

    <ImageView
        android:id="@+id/ivChangeDate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/tvTaskDateTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tvTaskTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskDateTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Time : "
        />
    <TextView
        android:id="@+id/tvTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvTaskTimeTitle"
        app:layout_constraintLeft_toRightOf="@+id/tvTaskDateTitle"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="시간"
        />

    <ImageView
        android:id="@+id/ivChangeTime"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/tvTaskTimeTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTaskTimeTitle"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Title"
        />

    <EditText
        android:id="@+id/edtTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTaskTitle"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:background="@drawable/edit_background_round_10"
        android:gravity="center"
        android:elevation="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/outOfRangeColor"
        android:lines="1"
        android:ellipsize="start"
        android:inputType="text"
        android:hint="여기를 터치하여 제목을 입력하세요"
        />

    <TextView
        android:id="@+id/tvTaskContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtTaskTitle"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Contents"
        />
    <EditText
        android:id="@+id/edtTaskContents"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/tvTaskContents"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:elevation="4dp"
        android:background="@drawable/edit_background_round_10"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="top"
        android:textColor="@color/black"
        android:textColorHint="@color/outOfRangeColor"
        android:hint="여기를 터치하여 내용을 입력하세요"
        />
    <TextView
        android:id="@+id/tvEditCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtTaskContents"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/outOfRangeColor"
        android:text="0/300"
        />


    <TextView
        android:id="@+id/tvRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/radioRepeat"
        app:layout_constraintBottom_toBottomOf="@+id/radioRepeat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="반복"
        />
    <RadioGroup
        android:id="@+id/radioRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edtTaskContents"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRepeat"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radioNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/black"
            android:text="없음"
            />
        <RadioButton
            android:id="@+id/radioYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="매년"
            />
        <RadioButton
            android:id="@+id/radioMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="매달"
            />
        <RadioButton
            android:id="@+id/radioWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"
            android:text="매주"
            />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/repeatWeekBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/repeatMon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Mon"/>
        <CheckBox
            android:id="@+id/repeatTue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Tue"/>
        <CheckBox
            android:id="@+id/repeatWEN"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Wen"/>
        <CheckBox
            android:id="@+id/repeatThu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Thu"/>
        <CheckBox
            android:id="@+id/repeatFri"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Fri"/>
        <CheckBox
            android:id="@+id/repeatSat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Sat"/>
        <CheckBox
            android:id="@+id/repeatSun"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioRepeat"
            android:button="@null"
            android:background="@drawable/custom_checkbox"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="4dp"
            android:text="Sun"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnWrite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="작성" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>