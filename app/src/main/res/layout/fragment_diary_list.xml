<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diary.list.DiaryListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/diaryListToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:title="나의 일기장"
        app:titleTextColor="@color/commonDayColor"
        app:titleTextAppearance="@style/Font24Weight600"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDiaryWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="일기 쓰러 가기!"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="10dp"
            android:layout_marginEnd="20dp"
            android:minHeight="0dp"
            app:backgroundTint="@color/white"
            app:elevation="0dp"
            android:outlineProvider="none"
            android:textColor="@color/commonDayColor"
            android:textAppearance="@style/Font20Weight600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcDiaryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diaryListToolbar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/diary_list_item"
        tools:itemCount="5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>