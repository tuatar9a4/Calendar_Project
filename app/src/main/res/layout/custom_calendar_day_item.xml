<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clDayContainer"
    android:layout_width="60dp"
    android:layout_height="65dp"
    android:paddingHorizontal="4dp"
    android:background="@drawable/select_ractangle"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:text="1"
        />
    <TextView
        android:id="@+id/tvHoliday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvDate"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toEndOf="@id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/sunDayColor"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="8sp"
        android:text="기독탄신일"
        />
    <TextView
        android:id="@+id/tvTopTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        android:lines="1"
        android:text="asdasdaasdasd"
        android:ellipsize="end"
        android:textSize="11sp"
        />
    <ImageView
        android:id="@+id/ivSticker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTopTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivSticker2"
        />
    <ImageView
        android:id="@+id/ivSticker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTopTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSticker1"
        app:layout_constraintEnd_toStartOf="@id/ivSticker3"
        />
    <ImageView
        android:id="@+id/ivSticker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTopTask"
        app:layout_constraintStart_toEndOf="@id/ivSticker2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>